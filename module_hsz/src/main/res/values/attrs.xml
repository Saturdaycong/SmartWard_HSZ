<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--用户界面每个item的样式-->
    <declare-styleable name="SimpleItem">
        <!-- 定义了一个新的属性,用来指定左侧文本 -->
        <attr name="leftText" format="reference|string" />
        <!-- 定义了一个新的属性,用来指定右侧文本 -->
        <attr name="rightText" format="reference|string" />
        <!-- 是否有分割线 -->
        <attr name="isDivider" format="reference|boolean" />
        <!--是否有箭头-->
        <attr name="isArrow" format="reference|boolean" />
    </declare-styleable>

    <!--标题的样式-->
    <declare-styleable name="TitleStyle">
        <!-- 定义了一个新的属性,用来指定title -->
        <attr name="titleCon" format="reference|string" />
    </declare-styleable>

    <!--编辑框的样式-->
    <declare-styleable name="NormalEditItem">
        <!-- 定义了一个新的属性,用来指定文本 -->
        <attr name="et_text" format="reference|string" />
        <!-- 定义了一个新的属性,用来指定hint-->
        <attr name="et_hint" format="reference|string" />
        <!-- 是否有上部背景 -->
        <attr name="et_top_bg" format="reference|boolean" />
        <!--是否有底部背景-->
        <attr name="et_bottom_bg" format="reference|boolean" />
        <!--是否有分割线-->
        <attr name="et_divider" format="reference|boolean" />
        <!--输入框类型 1是数字 2是-->
        <attr name="et_type" format="reference|integer" />
        <!--输入框最大长度-->
        <attr name="et_max_length" format="reference|integer" />
    </declare-styleable>


    <!--顶部的SegamentView-->
    <declare-styleable name="SegamentView">
        <!-- 定义了一个新的属性,用来指定文本 -->
        <attr name="left_text" format="reference|string" />
        <!-- 定义了一个新的属性,用来指定hint-->
        <attr name="right_text" format="reference|string" />
    </declare-styleable>

    <!--多个Segament的样式-->
    <declare-styleable name="MultiSegamentView">
        <!-- 定义了一个新的属性,用来指定文本 -->
        <attr name="segament_num" format="reference|integer" />
    </declare-styleable>

    <!--比例布局的属性-->
    <declare-styleable name="RatioFrameLayout">
        <attr name="picRatio" format="float"></attr>
        <attr name="relative" format="enum">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>

     <!--发布任务的条目属性-->
    <declare-styleable name="ImgAndTextItem">
        <attr name="text" format="string|reference"></attr>
        <attr name="img" format="reference"></attr>
    </declare-styleable>

    <attr name="SpinKitViewStyle" format="reference" />

    <declare-styleable name="SpinKitView">
        <attr name="SpinKit_Style">
            <enum name="RotatingPlane" value="0" />
            <enum name="DoubleBounce" value="1" />
            <enum name="Wave" value="2" />
            <enum name="WanderingCubes" value="3" />
            <enum name="Pulse" value="4" />
            <enum name="ChasingDots" value="5" />
            <enum name="ThreeBounce" value="6" />
            <enum name="Circle" value="7" />
            <enum name="CubeGrid" value="8" />
            <enum name="FadingCircle" value="9" />
            <enum name="FoldingCube" value="10" />
            <enum name="RotatingCircle" value="11" />
            <enum name="MultiplePulse" value="12" />
            <enum name="PulseRing" value="13" />
            <enum name="MultiplePulseRing" value="14" />
        </attr>
        <attr name="SpinKit_Color" format="color" />
    </declare-styleable>
</resources>