<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
                                     android:layout_marginLeft="30px"
                                     android:layout_marginTop="30px"
                                     android:gravity="center_vertical"
                                     android:background="@drawable/shape_gray_stroke_corner10"
              android:layout_height="60px">
<TextView
    android:id="@+id/item_oxy_record_num"
    android:textColor="@color/app_white"
    android:textSize="24px"
    android:layout_marginLeft="20px"
    android:gravity="center"
    android:background="@drawable/shape_red_oval"
    android:text="1"
    android:layout_width="40px"
    android:layout_height="40px"/>

    <TextView
        android:id="@+id/item_oxy_record_time"
        android:layout_marginLeft="20px"
        android:textColor="@color/public_text_60"
        android:textSize="24px"
        android:text="2019年07月29日 14:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_oxy_record_oxysum"
        android:layout_marginLeft="20px"
        android:textColor="@color/theme_blue"
        android:textSize="24px"
        android:text="1L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:src="@drawable/icon_next"
        android:layout_width="26px"
        android:layout_height="26px"/>
</com.zhy.autolayout.AutoLinearLayout>