<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:background="@color/app_white"
                                       android:layout_width="match_parent"
                                       android:layout_height="60px"
                                       android:id="@+id/layout_mian_top">
    <TextView
        android:id="@+id/layout_top_hospitalName"
        android:layout_marginLeft="18px"
        android:layout_centerVertical="true"
        android:textColor="@color/theme_blue"
        android:text="中国科学院大学深圳医院"
        android:textSize="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/layout_top_upgrade_tv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/layout_top_hospitalName"
        android:layout_centerVertical="true"
        android:text=""
        android:textSize="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="32px"
        android:layout_centerInParent="true"
        android:textColor="@color/theme_blue"
        android:text="6F 护士站"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:gravity="center_vertical"
        android:layout_marginRight="22px"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/layout_top_time_tv"
            android:textColor="@color/theme_blue"
            android:textSize="30px"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/wifi_4"
            android:id="@+id/layout_top_wifi_iv"
            android:layout_marginRight="20px"
            android:layout_marginLeft="46px"
            android:layout_gravity="center"
            android:layout_width="40px"
            android:layout_height="40px"/>

        <TextView
            android:id="@+id/layout_top_battery_tv"
            android:textSize="18px"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/battery_100"
            android:id="@+id/layout_top_battery_iv"
            android:layout_marginLeft="10px"
            android:layout_gravity="center"
            android:layout_width="40px"
            android:layout_height="40px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>