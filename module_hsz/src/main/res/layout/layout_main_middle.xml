<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/public_bg_e3"
                                     android:orientation="horizontal">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:background="@color/public_bg_e3">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layout_main_middle_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/public_bg_e3">
        </androidx.recyclerview.widget.RecyclerView>
        <include layout="@layout/view_error" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <!--主页右侧布局-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_marginRight="10px"
        android:layout_marginLeft="10px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_weight="3"
        android:orientation="vertical">
        <!--呼叫列表-->
        <com.zhy.autolayout.AutoLinearLayout
            android:elevation="4px"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="31"
            android:background="@drawable/shape_white_corner10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:text="呼叫列表"
                android:textColor="@color/theme_blue"
                android:textSize="24px"/>

           <com.ekz.ctt.eckctt.app.widget.SegamentView
               android:layout_marginTop="5px"
               android:id="@+id/layout_main_middle_sv"
               app:left_text="全部"
               app:right_text="未接"
               android:layout_width="match_parent"
               android:layout_height="50px">
           </com.ekz.ctt.eckctt.app.widget.SegamentView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/layout_main_middle_call_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--护理白板-->
        <com.zhy.autolayout.AutoLinearLayout
            android:elevation="4px"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="10px"
            android:background="@drawable/shape_white_corner10"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginLeft="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                   android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="护理白板"
                    android:textColor="@color/theme_blue"
                    android:textSize="20px"/>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/layout_mian_middle_board_detail_btn"
                    android:layout_alignParentRight="true"
                    android:layout_width="80px"
                    android:layout_height="70px">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_borad_detail"
                        android:layout_width="40px"
                        android:layout_height="40px"/>
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.zhy.autolayout.AutoLinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/layout_main_middle_inbed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:drawableLeft="@drawable/icon_admit"
                android:drawablePadding="16px"
                android:gravity="center_vertical"
                android:text="新入院（）"
                android:textColor="#474B60"
                android:textSize="20px"/>

            <TextView
                android:id="@+id/layout_main_middle_inbed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text=""
                android:textColor="#474B60"
                android:textSize="20px"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D2D4E3"/>

            <TextView
                android:id="@+id/layout_main_middle_outbed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="21px"
                android:drawableLeft="@drawable/icon_admit_out"
                android:drawablePadding="16px"
                android:gravity="center_vertical"
                android:text="出院（）"
                android:textColor="#474B60"
                android:textSize="20px"/>

            <TextView
                android:id="@+id/layout_main_middle_outbed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text=""
                android:textColor="#474B60"
                android:textSize="20px"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D2D4E3"/>

            <TextView
                android:id="@+id/layout_main_middle_todayops_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="21px"
                android:drawableLeft="@drawable/icon_operation"
                android:drawablePadding="16px"
                android:gravity="center_vertical"
                android:text="今日手术（）"
                android:textColor="#474B60"
                android:textSize="20px"/>
            <TextView
                android:id="@+id/layout_main_middle_todayops_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text=""
                android:textColor="#474B60"
                android:textSize="20px"/>
              <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#D2D4E3"/>

            <TextView
                android:id="@+id/layout_main_middle_tomops_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="21px"
                android:drawableLeft="@drawable/icon_operation"
                android:drawablePadding="16px"
                android:gravity="center_vertical"
                android:text="明日手术（）"
                android:textColor="#474B60"
                android:textSize="20px"/>

            <TextView
                android:id="@+id/layout_main_middle_tomops_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10px"
                android:text=""
                android:textColor="#474B60"
                android:textSize="20px"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </ScrollView>
        </com.zhy.autolayout.AutoLinearLayout>

        <!--满意度-->
        <com.zhy.autolayout.AutoLinearLayout
            android:visibility="gone"
            android:elevation="4px"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="11"
            android:layout_marginTop="10px"
            android:background="@drawable/shape_white_corner10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="10px"
                android:text="满意度调查"
                android:textColor="@color/theme_blue"
                android:textSize="20px"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="30px">

                <TextView
                    android:id="@+id/layout_main_middle_manyi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_like"
                    android:drawablePadding="10px"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/theme_red"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/layout_main_middle_bumanyi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/icon_notlike"
                    android:drawablePadding="10px"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="#474B60"
                    android:textSize="24px"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>