<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="1052px"
                                       android:layout_height="740px"
                                       android:background="@drawable/shape_white_corner10"
                                       android:orientation="vertical">

    <WebView
        android:id="@+id/frag_health_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>

    <com.zhy.autolayout.AutoLinearLayout
        android:visibility="gone"
        android:id="@+id/frag_health_edit_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/frag_health_back_btn"
            android:layout_width="60px"
            android:layout_height="60px">

            <ImageView
                android:layout_width="28px"
                android:layout_height="28px"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_gray_back"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="46px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#474B60"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/frag_health_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:text="张三"
                    android:textColor="@color/theme_blue"
                    android:textSize="24px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="科室"
                    android:textColor="#474B60"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/frag_health_patient_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:text="神经内科"
                    android:textColor="@color/theme_blue"
                    android:textSize="24px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="床号"
                    android:textColor="#474B60"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/frag_health_patient_bednum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:text="01"
                    android:textColor="@color/theme_blue"
                    android:textSize="24px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入院日期"
                    android:textColor="#474B60"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/frag_health_patient_admitdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:text="2019年7月22日 16:09"
                    android:textColor="@color/theme_blue"
                    android:textSize="24px"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住院编号"
                    android:textColor="#474B60"
                    android:textSize="24px"/>

                <TextView
                    android:id="@+id/frag_health_patient_admitnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:text="000000000001"
                    android:textColor="@color/theme_blue"
                    android:textSize="24px"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20px"
            android:background="@color/public_bg_f3"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/frag_health_date_btn"
            android:layout_width="460px"
            android:layout_height="60px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_blue_corner10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/frag_health_record_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="日期:  2019年07月22日  16:22"
                android:textColor="@color/app_white"
                android:textSize="24px"/>

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="40px"
                android:src="@drawable/icon_date"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/dialog_health_left_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_tem"
                        android:drawablePadding="10px"
                        android:gravity="center_vertical"
                        android:text="体温"
                        android:textColor="#474B60"
                        android:textSize="24px"/>

                    <EditText
                        android:id="@+id/dialog_health_tem_et"
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:paddingBottom="10px"
                        android:text="36.0"
                        android:textColor="@color/theme_blue"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_breath"
                        android:drawablePadding="10px"
                        android:gravity="center_vertical"
                        android:text="呼吸"
                        android:textColor="#474B60"
                        android:textSize="24px"/>

                    <EditText
                        android:id="@+id/dialog_health_breath_et"
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingBottom="10px"
                        android:text="70"
                        android:textColor="@color/theme_blue"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_pressure"
                        android:drawablePadding="10px"
                        android:gravity="center_vertical"
                        android:text="收缩压"
                        android:textColor="#474B60"
                        android:textSize="24px"/>

                    <EditText
                        android:id="@+id/dialog_health_pressure_et"
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingBottom="10px"
                        android:text="120/86"
                        android:textColor="@color/theme_blue"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="62px"
                        android:gravity="center_vertical"
                        android:text="舒张压"
                        android:textColor="#474B60"
                        android:textSize="24px"/>

                    <EditText
                        android:id="@+id/dialog_health_lowpressure_et"
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingBottom="10px"
                        android:textColor="@color/theme_blue"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/dialog_health_right_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120px"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_pluse"
                        android:drawablePadding="10px"
                        android:gravity="center_vertical"
                        android:text="脉搏"
                        android:textColor="#474B60"
                        android:textSize="24px"/>

                    <EditText
                        android:id="@+id/dialog_health_pluse_et"
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingBottom="10px"
                        android:text="60"
                        android:textColor="@color/theme_blue"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_oxy"
                        android:drawablePadding="10px"
                        android:gravity="center_vertical"
                        android:text="血氧"
                        android:textColor="#474B60"
                        android:textSize="24px"/>

                    <EditText
                        android:id="@+id/dialog_health_oxy_et"
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingBottom="10px"
                        android:text="98%"
                        android:textColor="@color/theme_blue"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_weight"
                        android:drawablePadding="10px"
                        android:gravity="center_vertical"
                        android:text="体重"
                        android:textColor="#474B60"
                        android:textSize="24px"/>

                    <EditText
                        android:id="@+id/dialog_health_weight_et"
                        android:layout_width="150px"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingBottom="10px"
                        android:text="60"
                        android:textColor="@color/theme_blue"
                        android:textSize="28px"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:layout_marginTop="50px"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_health_cancel"
                android:layout_width="200px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_red_corner10"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/app_white"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/dialog_health_confirm"
                android:layout_width="200px"
                android:layout_height="50px"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40px"
                android:background="@drawable/shape_red_corner10"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/app_white"
                android:textSize="30px"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/frag_health_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20px"
        android:background="@drawable/shape_blue_corner10"
        android:gravity="center"
        android:paddingBottom="5px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="5px"
        android:text="编辑"
        android:textColor="@color/app_white"/>
</com.zhy.autolayout.AutoRelativeLayout>