<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <com.zhy.autolayout.AutoLinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <com.youth.banner.Banner
           app:banner_default_image="@mipmap/home_banner"
           android:id="@+id/frag_home_banner"
           android:layout_width="match_parent"
           android:layout_height="180px"/>

       <com.zhy.autolayout.AutoLinearLayout
           android:paddingLeft="26px"
           android:paddingRight="26px"
           android:paddingTop="14px"
           android:paddingBottom="14px"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <!--相册天气-->
           <com.zhy.autolayout.AutoRelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.zhy.autolayout.AutoRelativeLayout
                   android:id="@+id/frag_home_ablum_btn"
                   android:layout_width="268px"
                   android:layout_height="242px">
                   <ImageView
                       android:src="@mipmap/icon_ablum"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
                   <TextView
                       android:layout_marginBottom="18px"
                       android:layout_centerHorizontal="true"
                       android:layout_alignParentBottom="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="电子相册"
                       android:textColor="@color/app_white"
                       android:textSize="20px"/>
               </com.zhy.autolayout.AutoRelativeLayout>

               <com.zhy.autolayout.AutoRelativeLayout
                   android:id="@+id/frag_home_weather_btn"
                   android:layout_alignParentRight="true"
                   android:layout_width="268px"
                   android:layout_height="242px">
                   <ImageView
                       android:src="@mipmap/icon_weather"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
                   <TextView
                       android:layout_marginBottom="18px"
                       android:layout_centerHorizontal="true"
                       android:layout_alignParentBottom="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="沙井街道"
                       android:textColor="@color/app_white"
                       android:textSize="20px"/>
               </com.zhy.autolayout.AutoRelativeLayout>
           </com.zhy.autolayout.AutoRelativeLayout>

           <!--音视频-->
           <com.zhy.autolayout.AutoLinearLayout
               android:gravity="center_vertical"
               android:elevation="4px"
               android:layout_marginLeft="6px"
               android:layout_marginRight="6px"
               android:paddingTop="8px"
               android:paddingBottom="8px"
               android:paddingLeft="18px"
               android:paddingRight="18px"
               android:background="@drawable/shape_white_30"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <com.zhy.autolayout.AutoLinearLayout
                   android:layout_marginLeft="50px"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent">
                   <ImageView
                       android:src="@mipmap/icon_video"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                   <TextView
                       android:layout_marginTop="30px"
                       android:textColor="#010101"
                       android:textSize="18px"
                       android:text="视频电话"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </com.zhy.autolayout.AutoLinearLayout>

               <View
                   android:layout_marginLeft="46px"
                   android:background="#9B9B9B"
                   android:layout_width="2px"
                   android:layout_height="200px"/>

               <com.zhy.autolayout.AutoRelativeLayout
                   android:layout_marginLeft="30px"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/frag_home_contact_01"
                   android:src="@mipmap/son_01"
                   android:layout_width="126px"
                   android:layout_height="100px"/>
                <ImageView
                    android:layout_toRightOf="@id/frag_home_contact_01"
                    android:id="@+id/frag_home_contact_02"
                    android:layout_marginLeft="15px"
                   android:src="@mipmap/son_01"
                   android:layout_width="126px"
                   android:layout_height="100px"/>
                <ImageView
                    android:layout_below="@id/frag_home_contact_01"
                   android:src="@mipmap/son_01"
                   android:layout_width="126px"
                   android:layout_height="100px"/>
                <ImageView
                    android:layout_toRightOf="@id/frag_home_contact_01"
                    android:layout_below="@id/frag_home_contact_02"
                    android:layout_marginLeft="15px"
                   android:src="@mipmap/son_01"
                   android:layout_width="126px"
                   android:layout_height="100px"/>

               </com.zhy.autolayout.AutoRelativeLayout>

           </com.zhy.autolayout.AutoLinearLayout>

            <!--健康管家-->
           <com.zhy.autolayout.AutoLinearLayout
               android:layout_marginTop="17px"
               android:gravity="center_vertical"
               android:elevation="4px"
               android:layout_marginLeft="6px"
               android:layout_marginRight="6px"
               android:paddingLeft="18px"
               android:paddingRight="18px"
               android:background="@drawable/shape_white_30"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="235px">
               <com.zhy.autolayout.AutoLinearLayout
                   android:layout_marginLeft="57px"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/icon_manager" />

                   <TextView
                       android:layout_marginTop="5px"
                       android:textColor="#010101"
                       android:textSize="18px"
                       android:text="健康管家"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
               </com.zhy.autolayout.AutoLinearLayout>

               <View
                   android:layout_marginLeft="51px"
                   android:background="#9B9B9B"
                   android:layout_width="2px"
                   android:layout_height="200px"/>

               <com.zhy.autolayout.AutoRelativeLayout
                   android:layout_marginLeft="50px"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:gravity="center_horizontal"
                        android:id="@+id/frag_home_manager_pinggu"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/icon_health_eva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#2A2A2A"
                            android:textSize="18px"
                            android:text="在线评估"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginLeft="80px"
                    android:gravity="center_horizontal"
                    android:layout_toRightOf="@id/frag_home_manager_pinggu"
                    android:id="@+id/frag_home_manager_dangan"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/icon_health_eva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#2A2A2A"
                            android:textSize="18px"
                            android:text="健康档案"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginTop="20px"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/frag_home_manager_pinggu"
                    android:id="@+id/frag_home_manager_yubao"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/icon_health_eva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#2A2A2A"
                            android:textSize="18px"
                            android:text="预报中心"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_marginTop="20px"
                    android:layout_marginLeft="80px"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/frag_home_manager_dangan"
                    android:layout_toRightOf="@id/frag_home_manager_pinggu"
                    android:id="@+id/frag_home_manager_yuyue"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/icon_health_eva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="#2A2A2A"
                            android:textSize="18px"
                            android:text="预约服务"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </com.zhy.autolayout.AutoLinearLayout>

               </com.zhy.autolayout.AutoRelativeLayout>

           </com.zhy.autolayout.AutoLinearLayout>

       </com.zhy.autolayout.AutoLinearLayout>

   </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>