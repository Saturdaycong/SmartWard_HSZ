<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="356px"
    android:layout_height="202px"
    android:background="@drawable/bg_item_max"
    android:layout_marginLeft="10px"
    android:layout_marginTop="15px">

    <ImageView
        android:id="@+id/item_main_patient_root"
        android:scaleType="fitXY"
        android:src="@drawable/selector_item_health_monitor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:paddingLeft="9px"
        android:paddingRight="9px"
        android:paddingBottom="6px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="356px"
        android:layout_height="202px">

<TextView
    android:id="@+id/item_health_monitor_xiaoqu"
    android:layout_marginTop="8px"
    android:textColor="#FEFEFE"
    android:textSize="25px"
    android:text=""
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="8px"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--左1-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginLeft="3px"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_health_monitor_name"
                    android:textSize="40px"
                    android:textColor="@color/text_white"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/item_health_monitor_sex"
                    android:layout_marginLeft="34px"
                    android:layout_width="24px"
                    android:layout_height="24px"/>
                <TextView
                    android:id="@+id/item_health_monitor_age"
                    android:layout_marginLeft="4px"
                    android:textSize="15px"
                    android:textColor="@color/text_white"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/item_health_monitor_huliinfo"
                android:layout_marginTop="3px"
                android:textColor="@color/text_white"
                android:textSize="18px"
                android:text="护理编号：张曼玉     健康管家: 张幻雪"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="3px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="82px">

        <ImageView
            android:layout_marginLeft="7px"
            android:layout_centerVertical="true"
            android:id="@+id/item_health_monitor_leftiv"
            android:src="@drawable/left_btn"
            android:layout_width="26px"
            android:layout_height="26px"/>

        <ImageView
            android:layout_marginRight="7px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/item_health_monitor_rightiv"
            android:src="@drawable/right_btn"
            android:layout_width="26px"
            android:layout_height="26px"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_toLeftOf="@id/item_health_monitor_rightiv"
            android:layout_toRightOf="@id/item_health_monitor_leftiv"
            android:id="@+id/item_health_monitor_rv"
            android:layout_marginLeft="6px"
            android:layout_marginRight="6px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoFrameLayout>